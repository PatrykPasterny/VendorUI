<Window x:Class="VendorApp.Views.DisassemblingPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendorApp.Views"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="InfoBox" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="30,20,30,0" Height="55" FontSize="13" FontWeight="Bold" FontFamily="TimesNewRoman" TextAlignment="Center"/>
        <TextBox x:Name ="ItemComponents" Height="93" Margin="30,100,30,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="11" FontWeight="Bold" FontFamily="TimesNewRoman" TextAlignment="Left"/>
        <Button Content="Yes" HorizontalAlignment="Left" Margin="262,210,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="15" FontWeight="Bold" FontFamily="TimesNewRoman" Click="YesButtonClick"/>
        <Button Content="No" HorizontalAlignment="Left" Margin="30,210,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="15" FontWeight="Bold" FontFamily="TimesNewRoman" Click="NoButtonClick"/>

    </Grid>
</Window>
