<Window x:Class="VendorAppWPF.Views.QuantityPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendorApp"
        mc:Ignorable="d"
        Title="QuantityPopup" Height="200" Width="300">
    <Grid>
        <TextBlock Height="25" Margin="83,15,83,0" TextWrapping="Wrap" Text="How many?" VerticalAlignment="Top" FontSize="15" FontFamily="TimesNewRoman" FontWeight="Bold" TextAlignment="Center"/>
        <Slider x:Name="QuantitySlider" Margin="48,55,88,0" VerticalAlignment="Top" Maximum="10" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Height="35" ValueChanged="QuantitySlider_ValueChanged"/>
        <TextBox x:Name="QuantityPrice" Height="20" Margin="220,55,20,0" TextWrapping="Wrap" Text="350" VerticalAlignment="Top"/>
        <Button Content="Close" HorizontalAlignment="Left" Height="36" Margin="30,104,0,0" VerticalAlignment="Top" Width="85" FontSize="12" FontWeight="Bold" FontFamily="TimesNewRoman" Click="Close_Click"/>
        <Button Content="OK" Height="35" Margin="159,104,48,0" VerticalAlignment="Top" FontSize="12" FontWeight="Bold" FontFamily="TimesNewRoman" Click="OK_Click"/>
    </Grid>
</Window>
